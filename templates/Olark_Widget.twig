{% if currentUser %}
    <script>
        olark('api.visitor.updateFullName', {
            fullName: '{{ currentUser.getFullName() }}'
        });
        olark('api.visitor.updateEmailAddress', {
            emailAddress: '{{ currentUser.email }}'
        });
    </script>
{% endif %}

